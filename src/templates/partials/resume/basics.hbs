<div id="basic">
  <header>
    <h1 class="name">{{data.name}}</h1>
    <p class="job-position">{{data.label}}</p>
  </header>
  <ul class="contact">
    <li class="list-item">
      {{#if data.email}}
        <span><i class="icon ion-email"></i> : <a href="mailto:{{data.email}}">{{data.email}}</a> </span>
      {{/if}}
    </li>
    <li class="list-item">
      {{#if data.phone}}
        <span><i class="icon ion-ios-telephone"></i> : {{data.phone}}</span>
      {{/if}}
    </li>
    <li class="list-item">
      {{#if data.website}}
        <span><i class="icon ion-home"></i> : <a href="{{data.website}}" target="_blank">{{data.website}}</a></span>
      {{/if}}
    </li>
    <li class="list-item">
      <div id="socials">
        <ul class="inline-list">
          {{#each data.profiles as |profile|}}
          <li>
            <a href={{profile.url}} target="_blank" title={{profile.username}}>
              {{socialIcon profile.network}}
            </a>
          </li>
          {{/each}}
        </ul>
      </div>
    </li>
  </ul>
  {{> structures/address-box location=data.location}}


  <div id="summary">
    {{data.summary}}
  </div>
</div>
