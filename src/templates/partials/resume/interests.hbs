{{#> section}}
  {{#each data as |interest|}}
    <div class="detail-item">
      <header class="header">
        <h3>{{interest.name}}</h3>
      </header>
      <div class="further-info">
        <ul>
          {{#each interest.keywords as |keyword|}}
            <li>{{keyword}}</li>
          {{/each}}
        </ul>
      </div>
    </div>
  {{/each}}
{{/section}}
