{{#> section}}
  {{#each data as |publication|}}
    <div class="detail-item">
      <header class="header">
        <h3>{{publication.name}}</h3>
      </header>
      <p class="subheader-1">{{publication.publisher}}, <span class="date">{{publication.releaseDate}}</span></p>
      {{#if publication.website}}
        <p class="subheader-2"><a href="{{publication.website}}" target="_blank">{{publication.website}}</a></p>
      {{/if}}

      <div class="summary">
        {{publication.summary}}
      </div>
    </div>
  {{/each}}
{{/section}}
